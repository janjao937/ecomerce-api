generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Customer{
  id String @id @default(cuid())
  firstName String//default varchar = 191
  lastName String
  userName String @unique
  email String
  mobile String
  password String
}

model Supplier{
  id String @id @default(cuid())
  firstName String
  lastName String
  userName String @unique
  shopName String @unique
  shopImage String?
  // paymentQrImg String  after "Test" login/register 
  email String
  mobile String
  password String
}

